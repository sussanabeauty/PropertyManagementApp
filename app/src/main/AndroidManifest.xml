<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.sussanacode.propertymanagementapplication">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PropertyManagementApplication">

        <activity
            android:name=".register.RegisterActivity"
            android:label="@string/create_an_account" />
        <activity
            android:name=".resetPassword.ResetPasswordActivity"
            android:label="@string/reset_password" />

        <activity
            android:name=".view.PropertyByUserActivity"
            android:exported="true" />
        <activity
            android:name=".view.AddPropertyActivity"
            android:exported="true" />
        <activity
            android:name=".view.PropertyActivity"
            android:exported="true" />
        <activity
            android:name=".login.LoginActivity"
            android:label="@string/login_activity" />

        <activity
            android:name=".view.DashboardActivity"
            android:label="@string/dashboard" />
        <activity
            android:name=".splashScreen.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>