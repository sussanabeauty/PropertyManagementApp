<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context=".view.DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/xlighter_grey"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/ivProperty"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginVertical="@dimen/big_margin"
                android:layout_marginStart="@dimen/standard_margin"
                android:layout_marginLeft="@dimen/standard_margin"
                android:src="@drawable/ic_properties"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvProperty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/standard_margin"
                android:layout_marginLeft="@dimen/standard_margin"
                android:text="@string/properties"
                android:textColor="@color/black"
                android:textSize="@dimen/standard_text_size"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/ivProperty"
                app:layout_constraintTop_toTopOf="@+id/ivProperty" />

            <TextView
                android:id="@+id/tvPropertyQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/standard_margin"
                android:layout_marginLeft="@dimen/standard_margin"
                app:layout_constraintStart_toEndOf="@id/ivProperty"
                app:layout_constraintTop_toBottomOf="@id/tvProperty"
                tools:text="4 Active Properties" />

            <ImageButton
                android:id="@+id/addProperty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/big_margin"
                android:layout_marginRight="@dimen/big_margin"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_add"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/little_margin"
            android:background="@color/white">


            <ImageView
                android:id="@+id/ivTenant"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginVertical="@dimen/big_margin"
                android:layout_marginLeft="@dimen/standard_margin"
                android:src="@drawable/ic_tenant"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTenant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/standard_margin"
                android:layout_marginLeft="@dimen/standard_margin"
                android:text="@string/tenant_management"
                android:textColor="@color/black"
                android:textSize="@dimen/standard_text_size"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/ivTenant"
                app:layout_constraintTop_toTopOf="@+id/ivTenant" />

            <TextView
                android:id="@+id/tvTenantQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/standard_margin"
                android:layout_marginLeft="@dimen/standard_margin"
                app:layout_constraintStart_toEndOf="@id/ivTenant"
                app:layout_constraintTop_toBottomOf="@id/tvTenant"
                tools:text="3 Current Tenants" />

            <ImageButton
                android:id="@+id/addTenant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/big_margin"
                android:layout_marginRight="@dimen/big_margin"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_add"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/little_margin"
            android:background="@color/white">

            <ImageView
                android:id="@+id/ivIncome"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginVertical="@dimen/big_margin"
                android:layout_marginStart="@dimen/standard_margin"
                android:layout_marginLeft="@dimen/standard_margin"
                android:src="@drawable/ic_money"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/standard_margin"
                android:layout_marginLeft="@dimen/standard_margin"
                android:text="@string/gross_income"
                android:textColor="@color/black"
                android:textSize="@dimen/standard_text_size"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/ivIncome"
                app:layout_constraintTop_toTopOf="@+id/ivIncome" />


            <ImageButton
                android:id="@+id/addIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/big_margin"
                android:layout_marginRight="@dimen/big_margin"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_add"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="@dimen/little_margin"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="108dp">


            <ImageView
                android:id="@+id/ivExpense"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginVertical="@dimen/big_margin"
                android:layout_marginStart="@dimen/standard_margin"
                android:layout_marginLeft="@dimen/standard_margin"
                android:src="@drawable/ic_expense"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/standard_margin"
                android:layout_marginLeft="@dimen/standard_margin"
                android:text="@string/gross_expense"
                android:textColor="@color/black"
                android:textSize="@dimen/standard_text_size"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/ivExpense"
                app:layout_constraintTop_toTopOf="@+id/ivExpense" />

            <TextView
                android:id="@+id/tvExpenseAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/standard_margin"
                android:layout_marginLeft="@dimen/standard_margin"
                app:layout_constraintStart_toEndOf="@id/ivExpense"
                app:layout_constraintTop_toBottomOf="@id/tvExpense"
                tools:text="$5,000.00 Gross Expense" />

            <ImageButton
                android:id="@+id/addExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/big_margin"
                android:layout_marginRight="@dimen/big_margin"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_add"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/settings_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
